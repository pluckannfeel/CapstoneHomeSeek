<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context="homeseek.app.android.capstonehomeseek.Fragments.SignInFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_details"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="7dp"
        android:background="@drawable/my_list_view"
        >

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ImageView
            android:src="@drawable/homeseeklogo"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>


        <EditText
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/customized_edittext"
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:typeface="normal"
            android:inputType="text" />

        <EditText
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/customized_edittext"
            android:id="@+id/et_pass_word"
            android:password="true"
            android:inputType="textPassword|text"
            android:layout_width="match_parent"
            android:typeface="normal"
            android:layout_height="wrap_content"
            android:hint="Password" />

        <Button
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Sign In"
            android:id="@+id/btn_sign_in"
            android:background="#E18A07"
            android:textColor="#FFFFFF"
            />

        <ProgressBar
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/login_progressBar"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
