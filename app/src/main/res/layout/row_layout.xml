<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:elevation="7dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="2dp"
        app:cardElevation="7dp"
        >

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/my_list_view"
            >

        <TextView
            android:id="@+id/p_name"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Name"/>

        <TextView
            android:id="@+id/p_type"
            android:layout_marginTop="40dp"
            android:layout_below="@id/p_name"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Type"/>

        <TextView
            android:id="@+id/p_term"
            android:layout_marginTop="75dp"
            android:layout_below="@id/p_type"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propery Term"/>

        <TextView
            android:id="@+id/p_price"
            android:layout_marginTop="110dp"
            android:layout_below="@id/p_term"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"/>

        </FrameLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>