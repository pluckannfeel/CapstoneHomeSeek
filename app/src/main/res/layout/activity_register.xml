<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="homeseek.app.android.capstonehomeseek.RegisterActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="25dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

    <EditText
        android:layout_marginTop="5dp"
        android:background="@drawable/customized_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_firstname"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/et_lastname"
        android:layout_alignEnd="@+id/et_lastname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="First Name"
        android:inputType="text" />

    <EditText
        android:layout_marginTop="5dp"
        android:background="@drawable/customized_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_lastname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_firstname"
        android:layout_alignRight="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:hint="Last Name"
        android:inputType="text" />

    <EditText
        android:layout_marginTop="5dp"
        android:background="@drawable/customized_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:layout_below="@+id/et_lastname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Username"
        android:typeface="normal"
        android:inputType="text" />

    <EditText
        android:layout_marginTop="5dp"
        android:background="@drawable/customized_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_password"
        android:layout_below="@+id/et_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:hint="Password"
        android:password="true"
        android:typeface="monospace"
        android:inputType="text"/>

    <EditText
        android:layout_marginTop="5dp"
        android:background="@drawable/customized_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_email"
        android:layout_below="@+id/et_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/et_password"
        android:layout_alignEnd="@+id/et_password"
        android:hint="Email Address" />

            <EditText
                android:layout_marginTop="5dp"
                android:background="@drawable/customized_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/et_address"
                android:layout_below="@+id/et_email"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="City Address" />

    <EditText
        android:layout_marginTop="5dp"
        android:background="@drawable/customized_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/et_age"
        android:layout_below="@+id/et_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Age" />

    <EditText
        android:layout_marginTop="5dp"
        android:background="@drawable/customized_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_contactNo"
        android:layout_below="@+id/et_age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/et_age"
        android:layout_alignEnd="@+id/et_age"
        android:hint="Contact Number" />

    <Button
        android:textColor="@color/colorPrimaryDark"
        android:background="#d3d3d3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/btn_register"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_contactNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/et_contactNo"
        android:layout_alignEnd="@+id/et_contactNo" />

    <ProgressBar
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/reg_progressBar"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>


